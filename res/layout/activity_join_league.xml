<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join_league"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout2.JoinLeagueActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView42"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:fontFamily="serif"
        app:layout_constraintHorizontal_bias="0.59"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:text="@string/form_league_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView43"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText10" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText10"
        android:hint="@string/league_code"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView43"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_width="0dp" />

    <Button
        android:text="@string/join_league"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/editText10"
        android:onClick="leagues"/>
</android.support.constraint.ConstraintLayout>
