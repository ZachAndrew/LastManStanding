<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lastmanstandingv1.ProfileActivity"
    tools:showIn="@layout/app_bar_profile">

    <TextView
        android:text="@string/form_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:layout_constraintRight_toLeftOf="@+id/textView34"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="@string/edit_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:textSize="18sp"
        android:textColor="@color/link"
        app:layout_constraintTop_toTopOf="@+id/profile_name"
        app:layout_constraintBottom_toBottomOf="@+id/profile_name"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="changeName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        android:id="@+id/view" />

    <TextView
        android:text="@string/form_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        app:layout_constraintLeft_toLeftOf="@+id/profile_name"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_email"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        app:layout_constraintLeft_toLeftOf="@+id/textView35"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView39"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="@string/edit_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView39"
        android:textSize="18sp"
        android:textColor="@color/link"
        app:layout_constraintTop_toTopOf="@+id/profile_email"
        app:layout_constraintBottom_toBottomOf="@+id/profile_email"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="changeEmail"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <View
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp" />

    <TextView
        android:text="@string/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView40"
        android:textSize="18sp"
        android:textColor="@color/link"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/profile_email"
        android:layout_marginTop="32dp"
        android:onClick="changePassword"/>

    <TextView
        android:text="@string/delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView41"
        android:textColor="@color/redText"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView40"
        app:layout_constraintLeft_toLeftOf="@+id/textView40"
        android:onClick="deleteAccount"/>
</android.support.constraint.ConstraintLayout>
