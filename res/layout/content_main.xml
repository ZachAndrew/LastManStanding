<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="andrew.zach.lmsprototype1.MainActivity" android:background="@drawable/soccer_image"
        android:visibility="visible">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Player"
            android:id="@+id/sendT"
            android:layout_above="@+id/pressViewPlayers" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*App Notifications *"
            android:id="@+id/textView"
            android:textColor="#fbeb01" android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/changeDatabaseInfo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerInputText"
            android:inputType="text"
            android:textColor="#bb071f"
            android:layout_alignEnd="@+id/pressViewPlayers" android:layout_alignStart="@+id/pressViewPlayers"
            android:layout_above="@+id/sendT"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Notifications*"
            android:id="@+id/notifications" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp" android:textColor="#f3fb05"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Database"
            android:id="@+id/changeDatabaseInfo"
            android:layout_marginTop="36dp" android:layout_below="@+id/pressViewPlayers"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LAST MAN STANDING"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textColor="@color/abc_primary_text_disable_only_material_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*PROTOTYPE 1*"
            android:id="@+id/textView3" android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/notifications"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Players In League 1"
            android:id="@+id/pressViewPlayers"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:onClick="viewTotalPlayers"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update League 1"
            android:id="@+id/enterIntoLeague" android:layout_alignBottom="@+id/changeDatabaseInfo"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER PLAYER NAME INTO DATABASE"
            android:id="@+id/textView5" android:layout_above="@+id/playerInputText"
            android:layout_centerHorizontal="true" android:textSize="17dp" android:textStyle="bold|italic"
            android:textAlignment="center" android:textColor="@color/errorColor"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Players"
            android:id="@+id/viewAllPlayers"
            android:layout_above="@+id/notifications" android:layout_centerHorizontal="true"
            android:onClick="viewPlayersButton"/>

</RelativeLayout>
