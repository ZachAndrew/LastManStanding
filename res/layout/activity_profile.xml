<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout.ProfileActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView100"
        android:textSize="40sp"
        android:textColor="#45B"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:text="@string/home_page_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView101"
        android:textColor="#45B"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="homePage"/>

    <TextView
        android:text="@string/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView102"
        android:textColor="#000"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="@string/sign_up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView115"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView102"
        android:layout_marginEnd="232dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="232dp" />

    <TextView
        android:text="@string/sign_up_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView116"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginEnd="232dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="232dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView115" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView117"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toRightOf="@+id/textView115"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView102" />

    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView118"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toRightOf="@+id/textView116"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView117" />

    <TextView
        android:text="@string/billing_information_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView119"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textColor="#45B"
        android:textSize="18sp"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toBottomOf="@+id/textView102"
        android:onClick="billingInformation"/>

</android.support.constraint.ConstraintLayout>
