<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout.SignUpActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="40sp"
        android:textColor="#45B"
        android:textStyle="normal|bold|italic"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:text="@string/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="408dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="emailVerification"/>

    <TextView
        android:text="@string/sign_up_name"
        android:layout_width="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_height="39dp"
        android:layout_marginEnd="216dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="216dp"
        android:layout_marginTop="184dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/sign_up_email"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginEnd="216dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="216dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:text="@string/sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginEnd="216dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="216dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:text="@string/sign_up_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:id="@+id/textView10"
        android:layout_marginEnd="216dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="216dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:textSize="18sp"
        android:textColor="#000" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_height="40dp"
        android:layout_width="170dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:hint="@string/name"
        android:layout_marginTop="176dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="@string/email"
        android:layout_width="170dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="@string/password"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="@string/password"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="@string/already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView12" />

    <TextView
        android:text="@string/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="#45B"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:onClick="logIn"/>
</android.support.constraint.ConstraintLayout>
