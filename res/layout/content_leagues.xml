<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_leagues"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lastmanstandinglayout2.LeaguesActivity"
    tools:showIn="@layout/app_bar_leagues">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout">

        <Button
            android:text="@string/create_league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/whiteText"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="center"
            android:layout_marginRight="4dp"
            android:fontFamily="sans-serif"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            android:onClick="createLeague"/>

        <Button
            android:text="@string/join_league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="@color/whiteText"
            android:textStyle="normal|bold|italic"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            android:onClick="joinLeague"/>
    </LinearLayout>

    <TextView
        android:text="@string/league_name_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/textView35"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        android:onClick="viewLeague"/>

    <TextView
        android:text="@string/in_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textSize="24sp"
        android:textColor="@color/blackText"
        app:layout_constraintTop_toTopOf="@+id/textView29"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView29"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="@string/league_name_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/textView29"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        android:onClick="viewLeague"/>

    <TextView
        android:text="@string/in_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:textSize="24sp"
        android:textColor="@color/blackText"
        app:layout_constraintTop_toTopOf="@+id/textView31"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView31"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView30"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="@string/league_name_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/textView31"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:onClick="viewLeague"/>

    <TextView
        android:text="@string/in_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:textSize="24sp"
        android:textColor="@color/blackText"
        app:layout_constraintTop_toTopOf="@+id/textView33"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView33"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView32"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="@string/my_leagues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:textSize="24sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:textColor="@color/blackText"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:textSize="24sp"
        android:textColor="@color/blackText"
        android:textStyle="normal|bold"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        app:layout_constraintLeft_toLeftOf="@+id/textView35" />

    <TextView
        android:text="@string/league_name_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        app:layout_constraintLeft_toLeftOf="@+id/textView36"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView36"
        android:textColor="@color/blackText"
        android:textSize="24sp" />

</android.support.constraint.ConstraintLayout>
