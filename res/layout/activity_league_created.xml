<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_league_created"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout.LeagueCreatedActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView107"
        android:textColor="#45B"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:text="@string/league_created_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView108"
        android:textSize="18sp"
        android:textColor="#000"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView107"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/league_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView109"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView108"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:text="@string/league_code_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView110"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView109"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView108" />

    <TextView
        android:text="@string/league_created_message_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView111"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView109" />

    <TextView
        android:text="@string/leagues_page_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView112"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView111"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textColor="#45B"
        android:textSize="18sp"
        android:onClick="leagues"/>
</android.support.constraint.ConstraintLayout>
