<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_password_reset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandingv1.PasswordResetActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold|italic"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:text="@string/password_reset_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        android:textSize="18sp"
        android:textColor="@color/blackText" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText8"
        app:layout_constraintLeft_toLeftOf="@+id/textView26"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        android:hint="@string/email"
        app:layout_constraintRight_toLeftOf="@+id/button4"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="@string/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText8"
        app:layout_constraintRight_toRightOf="@+id/textView26" />

    <TextView
        android:text="@string/password_reset_log_in"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        app:layout_constraintLeft_toLeftOf="@+id/textView26"
        app:layout_constraintRight_toRightOf="@+id/textView26"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/editText8"
        android:textSize="18sp"
        android:textColor="@color/blackText" />

    <TextView
        android:text="@string/log_in_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        app:layout_constraintLeft_toLeftOf="@+id/textView27"
        app:layout_constraintRight_toRightOf="@+id/textView27"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        android:textSize="18sp"
        android:textColor="@color/link"
        android:onClick="logIn"/>
</android.support.constraint.ConstraintLayout>
