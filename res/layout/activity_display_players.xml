<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="andrew.zach.lmsprototype1.DisplayPlayers" android:background="#2a47ea"

>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/players_in_league_1"
            android:id="@+id/textView4" android:layout_alignParentTop="false" android:layout_alignParentEnd="true"
            android:textStyle="bold|italic" android:textAlignment="center" android:textSize="27sp"
            android:layout_alignParentLeft="false" android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A text Field to display players in the database"
            android:id="@+id/textViewDisplayPlayers"
            android:textStyle="normal|bold|italic" android:textSize="23dp" android:textAlignment="center"
            android:layout_below="@+id/textView4" android:layout_alignParentStart="true"
            android:layout_marginTop="62dp" android:visibility="invisible"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_alignEnd="@+id/textViewDisplayPlayers"
            android:stackFromBottom="false" android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false" android:layout_below="@+id/textView4"
            android:scrollingCache="false" android:fastScrollAlwaysVisible="false"
            android:layout_alignParentEnd="false" android:layout_alignParentStart="false"
            android:drawSelectorOnTop="false" android:padding="@dimen/abc_action_bar_content_inset_material"/>
</RelativeLayout>
