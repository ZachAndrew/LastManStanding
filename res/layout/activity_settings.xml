<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout.SettingsActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView103"
        android:textSize="40sp"
        android:textStyle="normal|bold|italic"
        android:textColor="#45B"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:text="@string/home_page_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView104"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#45B"
        android:onClick="homePage"/>

    <TextView
        android:text="@string/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView105"
        android:textColor="#000"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView106"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        android:textColor="#45B"
        android:textSize="18sp"
        android:onClick="logOut"/>

    <TextView
        android:text="@string/sounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView127"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView105"
        android:layout_marginEnd="232dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="232dp" />

    <TextView
        android:text="@string/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView128"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView127"
        android:layout_marginEnd="232dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="232dp" />

    <ToggleButton
        android:text="@string/toggle_button"
        android:id="@+id/toggleButton2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView128"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/textView105"
        android:checked="true" />

    <ToggleButton
        android:text="@string/toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton3"
        android:checked="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView105"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView127"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
