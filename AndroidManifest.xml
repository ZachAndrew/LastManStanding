            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeaguesActivity"
            android:label="@string/title_activity_leagues"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FixturesAndResultsActivity"
            android:label="@string/nav_fixtures_and_results"
            android:parentActivityName=".LeaguesActivity" />
