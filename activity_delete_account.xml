<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_delete_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandingv1.DeleteAccountActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/form_password"
        android:textColor="@color/blackText"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordField"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textView38"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwordField"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/emailField"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/emailField" />

    <Button
        android:text="@string/delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAccount"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordField"
        android:onClick="deleteAccount" />

    <TextView
        android:text="@string/delete_account_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="textStart"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/form_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmPasswordField" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPasswordField"
        app:layout_constraintLeft_toLeftOf="@+id/passwordField"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordField"
        android:hint="@string/password"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="@string/form_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView38"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginStart="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailField" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/emailField"
        android:hint="@string/email"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView38"
        android:inputType="textEmailAddress" />

</android.support.constraint.ConstraintLayout>
