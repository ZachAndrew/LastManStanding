<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_league_created"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandinglayout2.LeagueCreatedActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView44"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:fontFamily="serif"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:text="@string/league_created_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <TextView
        android:text="@string/form_league_code"
        android:layout_height="wrap_content"
        android:id="@+id/textView46"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView45"
        app:layout_constraintRight_toLeftOf="@+id/textView47"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView45"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="@string/league_code_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView45"
        app:layout_constraintLeft_toLeftOf="@+id/textView45"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintTop_toTopOf="@+id/textView46" />

    <TextView
        android:text="@string/league_created_message2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView48"
        app:layout_constraintLeft_toLeftOf="@+id/textView45"
        app:layout_constraintRight_toRightOf="@+id/textView45"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView46"
        android:textSize="18sp"
        android:textColor="@color/blackText" />

    <TextView
        android:text="@string/leagues_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView49"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/textView48"
        android:textSize="18sp"
        android:textColor="@color/link"
        android:onClick="leagues"/>
</android.support.constraint.ConstraintLayout>
