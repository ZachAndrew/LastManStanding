<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lastmanstandingv1.ChangePasswordActivity">

    <TextView
        android:text="@string/form_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginStart="40dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordField"
        android:textColor="@color/blackText" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwordField"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        app:layout_constraintHorizontal_bias="0.39"
        android:hint="@string/new_password"
        android:inputType="textPassword" />

    <Button
        android:text="@string/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveChanges"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordField" />

    <TextView
        android:text="@string/enter_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        android:textAlignment="center" />

    <TextView
        android:text="@string/form_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmPasswordField" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPasswordField"
        app:layout_constraintLeft_toLeftOf="@+id/passwordField"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordField"
        android:hint="@string/new_password"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="@string/form_old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView38"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:textColor="@color/blackText"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailField" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/emailField"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView38"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        android:hint="@string/old_password" />

</android.support.constraint.ConstraintLayout>
