<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fixtures_and_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lastmanstandingv1.FixturesAndResultsActivity"
    tools:showIn="@layout/app_bar_fixtures_and_results"
    tools:ignore="MissingConstraints">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView89"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/blackText" />

    <Button
        android:text="@string/previous_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        app:layout_constraintTop_toTopOf="@+id/textView89"
        app:layout_constraintBottom_toBottomOf="@+id/textView89"
        app:layout_constraintRight_toLeftOf="@+id/textView89"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="previousWeek"/>

    <Button
        android:text="@string/next_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        app:layout_constraintTop_toTopOf="@+id/textView89"
        app:layout_constraintBottom_toBottomOf="@+id/textView89"
        app:layout_constraintLeft_toRightOf="@+id/textView89"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="nextWeek"/>

    <ProgressBar
        android:layout_width="48dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/progressBar" />

    <ListView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView89"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/listView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
