        <activity
            android:name=".ViewLeagueActivity"
            android:label="@string/view_league"
            android:parentActivityName=".LeaguesActivity" />
        <activity
            android:name=".LeagueCreatedActivity"
            android:label="@string/league_created" />
        <activity
            android:name=".PickTeamActivity"
            android:label="@string/pick_team"
